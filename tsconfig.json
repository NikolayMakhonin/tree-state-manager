{
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist/types",
		"baseUrl": ".",
		"target": "ES2019", // for convert option chainings: .? ??
		"lib": ["dom", "esnext"],
		"skipLibCheck": true,
		"stripInternal": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
		  "*" : ["node_modules/*"]
		}
	},
	"include": [
		"src/main/**/*.ts"
	]
}
